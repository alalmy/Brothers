TOKEN=`cat ./brothers/Token.txt`
sudo chmod +x ./TG

if [ "$1" == "R" ] ; then
while(true) do
sudo killall -q ./TG
sudo rm -fr ../.telegram-cli
./TG -s ./brothers/BS.lua --bot=$TOKEN
done
else

if ! screen -list | grep -q "brothers"; then
screen -S brothers ./bs R
fi
screen -X -S brothers kill
